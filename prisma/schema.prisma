// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  USER
  FINANCE
}

enum UserStatus {
  ACTIVE
  INACTIVE
  INVITED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   @default("")
  role      Role     @default(USER)
  userStatus UserStatus @default(ACTIVE)
  isEmailVerified Boolean @default(false)
  joinDate  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  venues    Venue[]
  assignedVenueId String?      // optional (nullable)
  isArchived  Boolean  @default(false)

  // Relasi ke venue yang di-assign ke user
  assignedVenue   Venue?       @relation("VenueAssignment", fields: [assignedVenueId], references: [id])

  // Relasi ke Profile
  profile Profile?

  @@map("users")
}

model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  fullName   String?
  avatar      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi ke User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

enum OpeningHoursType {
  REGULAR        // Pakai jam operasional venue (default)
  WITHOUT_FIXED  // Punya jadwal custom sendiri
  TEMP_CLOSED    // Ditutup sementara
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model Venue {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  address     String?
  description String?
  images      String[]
  city        String?
  phone       String?
  isActive    Boolean  @default(true)
  isArchived  Boolean  @default(false)

  // Waktu buka default untuk generate REGULAR court
  openHour    String   // ex: "07:00"
  closeHour   String   // ex: "23:00"

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String

  // Relations
  courts         Court[]
  assignedUsers  User[] @relation("VenueAssignment")

  @@map("venues")
}

model Court {
  id          String   @id @default(cuid())
  name        String
  isActive    Boolean  @default(true)
  isArchived  Boolean  @default(false)
  price       Int
  openingType OpeningHoursType @default(REGULAR)

  venue     Venue   @relation(fields: [venueId], references: [id], onDelete: Cascade)
  venueId   String

  // Custom schedule (optional)
  operatingHours CourtOperatingHour[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("courts")
}

model CourtOperatingHour {
  id        String   @id @default(cuid())

  court     Court    @relation(fields: [courtId], references: [id], onDelete: Cascade)
  courtId   String

  dayOfWeek DayOfWeek
  closed    Boolean  @default(false)

  slots     CourtTimeSlot[]

  @@unique([courtId, dayOfWeek])
  @@map("court_operating_hours")
}

model CourtTimeSlot {
  id                   String   @id @default(cuid())
  courtOperatingHour   CourtOperatingHour @relation(fields: [courtOperatingHourId], references: [id], onDelete: Cascade)
  courtOperatingHourId String

  openHour  String // "07:00"
  closeHour String // "23:00"

  @@map("court_time_slots")
}

model MagicLink {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("magic_links")
}

