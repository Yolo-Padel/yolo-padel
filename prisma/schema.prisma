// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  USER
  FINANCE
}

enum UserStatus {
  ACTIVE
  INACTIVE
  INVITED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   @default("")
  role      Role     @default(USER)
  userStatus UserStatus @default(ACTIVE)
  isEmailVerified Boolean @default(false)
  joinDate  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  venues    Venue[]
  assignedVenueId String?      // optional (nullable)

  // Relasi ke venue yang di-assign ke user
  assignedVenue   Venue?       @relation("VenueAssignment", fields: [assignedVenueId], references: [id])

  // Relasi ke Profile
  profile Profile?

  @@map("users")
}

model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  fullName   String?
  avatar      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi ke User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model Venue {
  id String   @id @default(cuid())
  slug String   @unique
  name String
  address String
  description String?
  images      String[]
  isActive Boolean @default(true)
  isArchived Boolean @default(false) // Soft delete flag
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy User @relation(fields: [createdById], references: [id])
  createdById String

  // Relasi ke Court
  courts Court[]
  // Relasi balik untuk user-user yang assigned ke venue ini
  assignedUsers User[] @relation("VenueAssignment")

  @@map("venues")
}

model Court {
  id        String   @id @default(cuid())
  name      String
  isActive  Boolean  @default(true)
  isArchived Boolean  @default(false) // Soft delete flag

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi ke Venue
  venue Venue @relation(fields: [venueId], references: [id], onDelete: Cascade)
  venueId String

  @@map("courts")
}

model MagicLink {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("magic_links")
}

